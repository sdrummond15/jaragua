<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_events_latest</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>MOD_EVENTS_LATEST_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_events_latest">mod_events_latest.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_events_latest.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_events_latest.ini</language>
		<language tag="en-GB">en-GB.mod_events_latest.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="menuevent"
					   type="menuitem"
					   label="Link eventos"
					   description="Informe o item de menu que contenha todos os eventos"
				/>
				<field
					name="count"
					type="number"
					label="MOD_LATEST_COUNT_LABEL"
					default="5"
					filter="integer"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
