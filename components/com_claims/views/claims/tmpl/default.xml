<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: default.xml 51 2010-11-22 01:33:21Z chdemko $ -->
<metadata>
    <layout title="COM_CLAIMS_CLAIMS_VIEW_DEFAULT_TITLE">
        <message>COM_CLAIMS_CLAIMS_VIEW_DEFAULT_DESC</message>
    </layout>
    <fields name="request">
        <fieldset name="request" addfieldpath="/administrator/components/com_claims/models/fields">

            <field name="email_admin"
                   type="radio"
                   class="btn-group"
                   default="1"
                   label="Usar o e-mail padrão"
                   description="Se SIM usará o e-mail padrão cadastrado, se NÃO deverá informar o e-mail cadastrado no próximo campos"
            >
                <option value="1">Sim</option>
                <option value="0">Não</option>
            </field>

            <field name="email_form"
                   type="text"
                   description="Informe o e-mail alternativo"
                   label="E-Mail"
                   default=""
                   showon="email_admin:0"
            />

            <field name="phone"
                   type="radio"
                   class="btn-group"
                   default="1"
                   label="Telefone"
                   description="Para habilitar o campo de telefone"
            >
                <option value="1">Sim</option>
                <option value="0">Não</option>
            </field>

            <field name="cell"
                   type="radio"
                   class="btn-group"
                   default="1"
                   label="Celular"
                   description="Para habilitar o campo de Celular"
            >
                <option value="1">Sim</option>
                <option value="0">Não</option>
            </field>

            <field name="button_enviar"
                   type="text"
                   description="Texto personalizado para o botão"
                   label="Botão de envio"
                   default=""
            />

            <field name="success"
                   type="text"
                   description="Informe a mensagem que irá aparecer caso o envio seja realizado com sucesso"
                   label="Mensagem de sucesso de envio"
                   filter="raw"
            />

            <field name="failure"
                   type="text"
                   description="Informe a mensagem que irá aparecer caso ocorra erro de envio"
                   label="Mensagem de erro de envio"
                   default="Erro no envio!"
            />

            <field name="msg_partner"
                   type="editor"
                   description="Informe a mensagem para o sócio"
                   label="Mensagem sócio"
                   filter="safehtml"
            />

            <field name="subject"
                   type="text"
                   description="Assunto do e-mail"
                   label="Assunto"
                   default=""
            />

            <field name="text_intro"
                   type="editor"
                   label="Texto Introdutório"
                   filter="safehtml"
            />

        </fieldset>
    </fields>

</metadata>